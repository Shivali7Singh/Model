#INHERITANCE:

class grandfather:
  def house(self):
      print("This is grandfather house")

class father(grandfather):
    def car (self):
        print("This is father's car")

class son(father):
   def bike(self):
       print("This is son's bike")

xyz=son()
xyz.bike()
xyz.car()
xyz.house()

abc=father()
abc.bike()
abc.car()
abc.house()

g=grandfather()
g.house()
g.car()
g.bike()



class A:
    def name(self):
        print("My name is Shivali")
class B():
    def last_name(self):
         print("singh")
class C():
    def familymember(self):
       print("There are 5 members in my family") 
x=A()
x.name()
# x.last_name()
# x.familymember()

y=B()
# y.name()
y.last_name()
# y.familymember()

